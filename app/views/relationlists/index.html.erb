<h1>Listing Relationlists</h1>



<p><%= @relationlists.count =%></p>
<table>
  <thead>
    <tr>
      <!--<th>Relationid</th>-->
      <!--<th>Frommvid</th>-->
      <th>No</th>
      <th>サムネイル</th>
      <th>Tomvid</th>
      <th>Fromtitle</th>
      <th>動画URL</th>
      <!--<th>Totitle</th>-->
      <th>Updatedate</th>
      <th>タグ</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% counta = 0 %>
    <% @relationlists.each do |relationlist| %>
      <tr>
        <% counta = counta + 1 %>
        <td><%= p counta.to_s %></td>
        <td><a href="http://pics.dmm.co.jp/digital/video/<%= relationlist.frommvid %>/<%= relationlist.frommvid %>pl.jpg"><img src="http://pics.dmm.co.jp/digital/video/<%= relationlist.frommvid %>/<%= relationlist.frommvid %>pt.jpg"></a><td>
        <!--<td><%= relationlist.relationid %></td>-->
        <!--<td><%= relationlist.frommvid %></td>-->
        <td><%= relationlist.tomvid %></td>
        <td><%= relationlist.fromtitle %></td>
        <td><a href=http://smv.to/detail/<%= relationlist.tomvid %> target="_blank">Sharemovieで見る</a></td>
        <td><%= relationlist.updatedate %></td>
        <% tagsstr="" %>
        <% Smvlist.where('smvid = ?', relationlist.tomvid).each do |tag| %>
            <% tagsstr=tagsstr + tag.tags %>
        <% end %>
        <td><%= tagsstr %></td>
        <td><%= link_to 'Show', relationlist %></td>
        <td><%= link_to 'Edit', edit_relationlist_path(relationlist) %></td>
        <td><%= link_to 'Destroy', relationlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relationlist', new_relationlist_path %>
